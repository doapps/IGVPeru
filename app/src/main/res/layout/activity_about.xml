<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:id="@+id/content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="555dp"
            android:layout_height="175dp"
            android:id="@+id/imageView"
            android:src="@drawable/logo_igv"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="5dp"
            android:layout_alignBottom="@+id/scrollView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|top"
            android:padding="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versión 1.2"
                android:id="@+id/txt_about_version"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/teal_500" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplicacion desarrollada por:"
                android:id="@+id/txt_about_desarr1"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/teal_500" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/doapp_logo"
                android:layout_gravity="center_horizontal"/>


        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contáctanos"
            android:id="@+id/btn_contacto"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_button_teal"
            android:textColor="@color/white"
            android:padding="15dp" />

    </LinearLayout>

</ScrollView>
